@model List<Bougies.Models.Carrito>

<h2>Carrito de Compras</h2>

@if (Model.Count == 0)
{
    <p>Tu carrito está vacío.</p>
}
else
{
    <h1>Mi bolsa(@Model.Sum(item => item.Cantidad))</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Imagen</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@Url.Content("~/images/" + item.Imagen)" width="50"></td>
                    <td>@item.Nombre</td>
                    <td>@item.Precio</td>
                    <td>@item.Cantidad</td>
                    <td>@(item.Precio * item.Cantidad) €</td>
                    @* <td> *@
                    @*     <a asp-action="EliminarDelCarrito" asp-route-id="@item.IdProducto" class="btn btn-danger">Eliminar</a> *@
                    @* </td> *@
                </tr>
            }
        </tbody>
    </table>
}
<a asp-controller="Tienda" asp-action="Index" class="btn btn-primary">Seguir comprando</a>
