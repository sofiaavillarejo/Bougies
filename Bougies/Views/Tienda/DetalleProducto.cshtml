@model Producto

<link rel="stylesheet" href="/css/detalleProducto.css" type="text/css">
<link rel="stylesheet" href="/css/About.css" type="text/css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<div class="container">
	<div class="row">
		<!-- Columna de la imagen -->
		<div class="col-md-5 text-start">
			<img src="@Url.Content("~/images/" + @Model.Imagen)" alt="Imagen Producto" class="product-image img-fluid h-90" />
		</div>

		<!-- Columna del texto -->
		<div class="col-md-7">
			<h1 class="display-5" style="font-size:4rem;">@Model.Nombre</h1>
            @if (Model.Precio != Model.PrecioDescuento)
            {
                <div class="product-price">
                    <span style="color: #d35846; font-size:22px">@Model.PrecioDescuento.ToString("0.00")€</span>
                    <span style="text-decoration: line-through; color: #bebebe;font-size:13px">@Model.Precio€</span>
                </div>
            }
            else
            {
                <h4 class="product-price">@Model.Precio€</h4>
            }
			<p class="description">@Model.Descripcion</p>
			<div class="buttonsCantidad">
				<a asp-controller="Carrito" asp-action="AddProductCarrito"
				   asp-route-id="@Model.Id"
				   asp-route-nombre="@Model.Nombre"
				   asp-route-precio="@Model.Precio"
				   asp-route-imagen="@Model.Imagen" class="product-button" style="color: white;">
					<i class="fa-solid fa-cart-shopping"></i>Añadir al carrito
				</a>
			</div>
            <div style="margin-top: 2rem; padding-top: 2rem; border-top: 1px solid #eee;">
                <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                    <div style="width: 40px; height: 40px; background-color: #f3efe9; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px; color: #ad9986;">
                        <i class="fa-solid fa-hand"></i>
                    </div>
                    <div style="color: #666; font-size: 0.9rem;">
                        Hecho a mano por artesanos locales
                    </div>
                </div>
                <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                    <div style="width: 40px; height: 40px; background-color: #f3efe9; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px; color: #ad9986;">
                        <i class="fa-solid fa-leaf"></i>
                    </div>
                    <div style="color: #666; font-size: 0.9rem;">
                        Materiales naturales y sostenibles
                    </div>
                </div>
                <div style="display: flex; align-items: center; margin-bottom: 1rem;">
                    <div style="width: 40px; height: 40px; background-color: #f3efe9; border-radius: 50%; display: flex; align-items: center; justify-content: center; margin-right: 15px; color: #ad9986;">
                        <i class="fa-solid fa-box"></i>
                    </div>
                    <div style="color: #666; font-size: 0.9rem;">
                        Embalaje reciclable 100%
                    </div>
                </div>
            </div>
		</div>
	</div>
</div>
