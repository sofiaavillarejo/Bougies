@model Pedido

<link rel="stylesheet" href="/css/confirmacionpedido.css" type="text/css">

<h2 class="display-5">Confirmación de Pedido</h2>

<div class="container-fluid .confirmacion">
    <div class="info">
        <h3>Pedido #@Model.IdPedido</h3>
        <p><span class="label"><i class="fas fa-calendar info-icon"></i>Fecha:</span> @Model.FechaPedido.ToString("dd/MM/yyyy")</p>
        <p><span class="label"><i class="fas fa-map-marker-alt info-icon"></i>Dirección:</span> @Model.Direccion, @Model.Ciudad, @Model.CodigoPostal, @Model.Poblacion</p>
        <p><span class="label"><i class="fas fa-tag info-icon"></i>Total:</span> <span class="total">@Model.Total €</span></p>
        <p><span class="label"><i class="fas fa-check-circle info-icon"></i>Estado:</span> <span class="status">@Model.Estado</span></p>

        <h3>Detalles del Pedido</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Producto</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detalle in Model.Detalles)
                {
                    <tr>
                        <td>@detalle.Producto.Nombre</td>
                        <td>@detalle.Cantidad</td>
                        <td>@detalle.Producto.Precio €</td>
                        <td>@(detalle.Cantidad * detalle.Producto.Precio) €</td>
                    </tr>
                }
            </tbody>
        </table>

        <div style="display: flex; justify-content: center;">
            <a asp-controller="Tienda" asp-action="Productos" class="return-button">Volver a la tienda</a>
        </div>
    </div>
</div>
